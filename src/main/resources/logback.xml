<configuration>
  <!-- directory (default "logs") can be overridden with -DLOG_DIR=/path/to/dir -->
  <property name="LOG_DIR" value="${LOG_DIR:-logs}"/>

  <!-- create a timestamp property at JVM start -->
  <timestamp key="startTime" datePattern="yyyy-MM-dd_HH-mm-ss"/>

  <!-- write to a file that includes the start timestamp (new file each run) -->
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>${LOG_DIR}/app-${startTime}.log</file>
    <append>false</append>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <!-- <pattern>%d{HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern> -->
      <pattern>%msg%n</pattern>
    </encoder>


    <filter class="ch.qos.logback.classic.filter.LevelFilter">
      <level>ERROR</level>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>
  </appender>

  <root level="INFO">
    <appender-ref ref="FILE"/>
    <appender-ref ref="CONSOLE"/>
  </root>
</configuration>